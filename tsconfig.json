{
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/__tests__/**",
    "src/testingPlayground",
    "src/db/**/*.test.ts"
  ],
  "compileOnSave": true,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "target": "ESNEXT",
    "module": "commonjs",
    "lib": ["es2015", "dom"],
    "declaration": true,
    "declarationDir": "dist/types",
    "sourceMap": true,
    "keyofStringsOnly": true,
    "outDir": "dist/types",
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noEmitOnError": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"]
    }
  }
}
